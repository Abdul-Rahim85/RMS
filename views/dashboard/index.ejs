<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <%- include('../layouts/head.ejs') %>
  <body class="bg-light">
    <div class="d-flex">
      <!-- Sidebar -->
      <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark text-white" style="width: 220px; height: 100vh;">
        <a href="/" class="d-flex align-items-center mx-auto text-white text-decoration-none">
          <span class="fs-4">نظام مبيعات</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/dashboard" class="nav-link text-white">لوحة التحكم</a>
          </li>
          <li>
            <a href="/dashboard/items" class="nav-link text-white">إدارة الاصناف</a>
          </li>
          <li>
            <a href="/dashboard/reports" class="nav-link text-white">التقارير</a>
          </li>
          <li>
            <a href="/dashboard/settings" class="nav-link text-white">الإعدادات</a>
          </li>
        </ul>
        <hr>
    <div>
      <a href="#" class="btn btn-outline-light w-100">تسجيل الخروج</a>
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-grow-1 p-4">
    <div class="row">
      <!-- Left section: items -->
      <div class="col-lg-8">
        <div class="row g-3">
          <div class="col-6 col-md-4">
            <div class="card text-center p-2 shadow-sm">
              <img src="https://images.unsplash.com/photo-1604908177522-4f44a4a8c184?w=200" 
                  class="card-img-top w-50 mx-auto" alt="Cheese Sandwich">
              <div class="card-body">
                <h6 class="card-title">Cheese Sandwich</h6>
                <p>$5</p>
              </div>
            </div>
          </div>
          <div class="col-6 col-md-4">
            <div class="card text-center p-2 shadow-sm">
              <img src="https://images.unsplash.com/photo-1604908554160-d7bb5e8b4f2b?w=200" 
                   class="card-img-top w-50 mx-auto" alt="Chicken Burger">
              <div class="card-body">
                <h6 class="card-title">Chicken Burger</h6>
                <p>$7</p>
              </div>
            </div>
          </div>
          <!-- Add more items here -->
        </div>
      </div>

      <!-- Right section: order + reports -->
      <div class="col-lg-4">
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Order</h5>
            <ul class="list-group mb-3">
              <li class="list-group-item d-flex justify-content-between">Cheese Sandwich x1 <span>$5</span></li>
              <li class="list-group-item d-flex justify-content-between">Hamburger x1 <span>$8</span></li>
              <li class="list-group-item d-flex justify-content-between">Coffee x1 <span>$3</span></li>
            </ul>
            <div class="d-flex justify-content-between"><strong>Total</strong><strong>$16</strong></div>
            <div class="mt-3">
              <button class="btn btn-secondary">Save Order</button>
              <button class="btn btn-primary">Print</button>
            </div>
          </div>
        </div>

        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Reports</h5>
            <p>Total Items: 12</p>
            <p>Top Item: Cheese Sandwich</p>
            <p>Total Sales: $50</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
    <script src="./js/bootstrap.bundle.min.js"></script>
    <script src="./js/sidebar.js"></script>
  </body>
</html>